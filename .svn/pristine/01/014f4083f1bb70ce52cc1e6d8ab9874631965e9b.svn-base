                                <h6 class="sidebar_title btn-block">
                                    热门话题
                                </h6>
                                <ul class="unstyled">
                                {% for tag in tags %}
                                    <li>
                                        <a href="/tag/{{ tag.name}}" title="{{ tag.name }}">
                                            {{ tag.name }}
                                        </a>
                                    </li>
                                 {% endfor %}
